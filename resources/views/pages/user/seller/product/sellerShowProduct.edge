            name: 'gameName',
            value: gameName,
        })
        @!input({
            type: 'hidden',
            value: card.image,
            id: 'image_url',
            name: 'image_URL',
        })
        @!input({
            type: 'hidden',
            name: 'cardId',
            value: card.id,
        })
        @!input({
            type: 'hidden',
            name: 'cardName',
            value: card.name.replaceAll('"', "'"),
        })
        @!input({
            type: 'hidden',
            name: 'cardSetName',
            value: card.set_name,
        })
        @!input({
            type: 'hidden',
            name: 'cardRarity',
            value: card.rarity,
        })
