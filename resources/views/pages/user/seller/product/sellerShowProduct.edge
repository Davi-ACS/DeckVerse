            @!select({
                id: 'quality',
                name: 'quality',
                class: 'input-select',
                required: true,
                options: options,
                default: "Adicione uma qualidade",
            })

        </div>

        <div class="mt-4">
            <label for="price" class="label-input">Preço (R$)</label>
            @!input({
                type: 'number',
                min: '0',
                step: '0.01',
                id: 'price',
                name: 'price',
                class: 'input-text',
                placeholder: 'Digite o preço do produto',
                required: true,
            })
        </div>

        <div class="mt-4">
            <label for="stockQuantity" class="label-input">Quantidade em Estoque</label>
            @!input({
                type: 'number',
                min: '1',
                step: '1',
